<?php

/**
 * @file
 * Hook implementations for the Recipes module.
 */

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_BASE_FORM_ID_alter().
 *
 * This alters all node forms because we don't know the machine name of the
 * recipe content type that the students created :(
 */
function recipes_form_node_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['actions']['publish']['#submit'][] = 'recipes_node_rezept_submit';
}

/**
 * Additional submit callback for the rezept form.
 */
function recipes_node_rezept_submit($form, FormStateInterface $form_state) {
  drpal_set_message(t('Thank you for submitting your recipe!'));
}
